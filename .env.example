# Copy this file to `.env` (or configure in your hosting provider) and fill values.
# IMPORTANT: Do NOT commit your filled `.env` to version control.

# Core server
PORT=80
SITE_DIR=/app/site
SETTINGS_PATH=/data/settings.json

# SMTP / Email delivery (SMTP2GO)
# Hostnames/ports per provider (SMTP2GO documented options):
# - STARTTLS: 2525, 8025, 587, 80, 25
# - SSL: 465, 8465, 443 (if SSL, set SMTP_SECURE=true)
SMTP_HOST=mail.smtp2go.com
SMTP_PORT=2525
SMTP_USERNAME=
SMTP_PASSWORD=
# Set to true only if using SSL ports (465/8465/443)
SMTP_SECURE=false

# Contact form addresses
CONTACT_FROM_EMAIL=zeke@rootsandecho.co.nz
CONTACT_TO_EMAIL=zeke@rootsandecho.co.nz
# Optional; defaults to CONTACT_FROM_EMAIL
CONTACT_REPLY_TO=

# Rate limiting for /api/contact
RATE_LIMIT_MAX=10
RATE_LIMIT_WINDOW_MS=900000

